<div class="container">
    <div class="row mt-5">

        <div class="col-md-5 mt-6">
            <img src="{{chefcipes.image}}" alt="{{chefcipes.title}}" style="width: 100%">
            <div class="ingredient-box">
                <h3 class="mt-4"><strong>Ingredients:</strong></h3>
                <ul>
                    {{#each chefcipes.ingredients}}
                    <li>{{name}} - {{amount}} {{unit}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-md-6">

            <h1 class="mt-6">{{chefcipes.title}}</h1>

            <div class="col-md-6">
                <div class="facts-table">
                    <h2 class="mt-4"><strong>Facts:</strong></h2>
                </div>
                <div class="col-md-6">
                    <hr>
                    <p> Ready in: {{chefcipes.readyInMinutes}} minutes</p>
                    <hr>
                    <p> Servings: {{chefcipes.servings}}</p>
                    <hr>
                    <p> Diets: {{chefcipes.diets}}</p>
                </div>
            </div>

            <div class="instructions mt-5">
                <h3>INSTRUCTIONS</h3>
                <p>{{{chefcipes.instructions}}}</p>
            </div>
            <div class="mt-5">
                <a href="/edit-chef-recipes/{{chefcipes._id}}" class="btn-dark btn-sm">Edit</a>
            </div>
            <form action='/delete-chef-recipes/{{chefcipes._id}}' method="POST" style="display: inline">
                <input type="submit" value="Eliminar" class="btn-sm btn-danger">
            </form>
        </div>
    </div>
</div>