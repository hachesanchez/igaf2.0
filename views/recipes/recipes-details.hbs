<div class="container">

    <div class="row mt-5">

        <div class="col-md-5 mt-6">
            <img src="{{recipe.image}}" alt="{{recipe.title}}" style="width: 100%">
            <div class="ingredient-box">
                <h3 class="mt-4"><strong>Ingredients:</strong></h3>
                <ul>
                    {{#each recipe.extendedIngredients}}
                    <li>{{name}} - {{amount}} {{unit}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-md-6">

            <h1 class="mt-6">{{recipe.title}}</h1>

            <div class="col-md-6">
                <div class="extra-info">
                    <div class="extra-info-text mt-6">
                        <p>
                            <img class="extra-info-img" src="/images/clock-png-5.png" alt="clock logo"
                                style="width: 30px;">
                            Ready in: {{recipe.readyInMinutes}} minutes
                        </p>
                        <hr>
                        <p>
                            <img class="extra-info-img"
                                src="/images/png-transparent-knife-fork-cutlery-spoon-spoon-and-fork-fork-black-and-white-tableware.png"
                                alt="fork and spoon logo" style="width: 30px;">
                            Servings: {{recipe.servings}}
                        </p>
                        <hr>
                        <p> Diets: {{recipe.diets}}</p>

                    </div>
                </div>
            </div>

            <div class="instructions mt-7">
                <h3>INSTRUCTIONS</h3>
                <p>{{{recipe.instructions}}}</p>
            </div>
            <div class="mt-5">
                <a href="/makefav/api/{{recipe.id}}" class="btn btn-secondary">Fave</a>
            </div>
        </div>
    </div>

</div>