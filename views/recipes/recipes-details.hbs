<div class="container">

    <div class="row mt-5">

        <div class="col-md-5 mt-6">
            <img src="{{recipe.image}}" alt="{{recipe.title}}" style="width: 100%">
            <div class="ingredient-box">
                <h3 class="mt-4"><strong>Ingredients:</strong></h3>
                <ul>
                    {{#each recipe.extendedIngredients}}
                    <li>{{name}} - {{amount}} {{unit}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="col-md-6">

            <h1 class="mt-6">{{recipe.title}}</h1>

            <div class="col-md-6">
                <div class="facts-table">
                    <h2 class="mt-4"><strong>Facts:</strong></h2>
                </div>
                <div class="col-md-6 ml-4">
                    <hr>
                    <p> Ready in: {{recipe.readyInMinutes}} minutes</p>
                    <hr>
                    <p> Servings: {{recipe.servings}}</p>
                    <hr>
                    <p> Diets: {{recipe.diets}}</p>
                </div>
            </div>

            <div class="instructions mt-7">
                <h3>INSTRUCTIONS</h3>
                <p>{{{recipe.instructions}}}</p>
            </div>
        </div>
    </div>

</div>