<div class="container">

    <h1>what do you fancy today?</h1>

    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-md-7">

            <form action="/recipes" method="GET">
                <div class="form-group row mt-3 d-flex align-items-center">
                    <div class="col-md-5">
                        <h2 class="m-0">Search by ingredient</h2>
                    </div>
                    <div class="col-md-5">
                        <input type="text" id="ingredients" name="ingredients" class="form-control"
                            placeholder="ex.garlic">
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success">Search</button>
                    </div>
                </div>
            </form>

        </div>
    </div>


    <div class="row">

        {{#each recipes}}

        <div class=" card col-3 mt-2">

            <div>
                <img class="card-img-top" src="{{image}}" alt="profile-pic">
            </div>

            <div class="card-body" style="color: black;">
                <h5 class="card-title"><strong>{{title}}</strong> </h5>
                <a href="/recipes/{{id}}" class="btn btn-outline-dark btn-sm">View Recipe</a>

            </div>

        </div>

        {{/each}}
    </div>
</div>