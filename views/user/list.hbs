<div class="container">
    <h1>The selection of our chefs</h1>

    <div class="row">

        {{#each user}}

        <div class=" card col-3 mt-2">

            <div>
                <img class="card-img-top" src="{{profileImage}}" alt="profile-pic">
            </div>

            <div class="card-body" style="color: black;">
                <h5 class="card-title">{{userName}}</h5>
                <p class="card-text">{{role}}</p>
                <a href="/profiles/{{id}}">Details</a>
                <a href="/editprofiles/{{id}}">Edit</a>
                <form action="/deleteprofile/{{id}}" method="POST" style="display: inline">
                    <input type="submit" value="eliminar" class="btn btn-sm btn-danger">
                </form>
            </div>

        </div>

        {{/each}}
    </div>
</div>