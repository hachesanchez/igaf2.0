<body class="chefs-details">

    <div class="container">

        <div class="row">

            <div class="col-md-6">
                <div class="chef-img">
                    <img class="chef-img" src="{{profileImage}}" alt="profile-pic">
                </div>
            </div>

            <div class="col-md-6 d-flex flex-column  justify-content-start align-items-center mt-5 ">
                <h1>Welcome {{userName}}</h1>
                <h3>We're glad to see you again!</h3>
                <h5>Your email is {{email}}</h5>
                <a href="/editprofiles/{{id}}" class="btn btn-secondary mt-2">Edit my profile</a>
            </div>
            <div class="col-md-6 d-flex flex-column  justify-content-start align-items-left mt-5 ">

            </div>

        </div>


        <div class="row mt-5">
            <h5>These are your favorite recipes:</h5>
            {{!-- {{favRecipes}} --}}

            {{#each favRecipes}}

            {{!-- {{#with recipesFromMongo}} --}}

            <div class="col-2 mt-2">
                <div>
                    <img class="card-img-top" src="{{recipesFromMongo.image}}" alt="recipe picture">
                </div>

                <div class="card-body" style="color: black;">
                    <h5 class="card-title"><strong>{{title}}</strong> </h5>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</body>